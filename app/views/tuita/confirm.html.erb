<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @tuitum, url: tuita_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>本文:<%= @tuitum.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @tuitum, url: new_tuitum_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>