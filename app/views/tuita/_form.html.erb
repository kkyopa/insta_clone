<%= form_with(model: @tuitum, local: true ,url: choose_new_or_edit) do |form| %>
<% if @tuitum.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tuitum.errors.count %>件のエラーがあります。<br>1文字以上１４０文字以内にして下さい。</h2>
      <ul>
        <% @tuitum.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="tuitum_title">
  <%= form.label :sw %><br><br><br>
  <%= form.text_field :content,:size=>"60" %><br><br>
  <button type="submit" class="btn btn-info">送信する</button>
</div>
<% end %>






